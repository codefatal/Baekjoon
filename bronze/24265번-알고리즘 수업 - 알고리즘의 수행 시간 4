import java.util.*;

public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		long n = sc.nextLong();	
		long sum = 0;
		while(true) {			
			if(n==1) {
				System.out.println(0);
				System.out.println(2);
				break;
			}
			if(n%2==0) {
				sum = ((n+1)*(n/2)-n);
			} else {
				sum = n*((n-1)/2);
			}
			System.out.println(sum);
			System.out.println(2);
			break;
		}
	}
}
