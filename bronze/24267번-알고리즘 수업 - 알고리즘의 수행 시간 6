import java.util.*;

public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		long n = sc.nextLong();	
		long sum = 0;

		if(n==1 || n==2) {
			System.out.println(0);
			System.out.println(3);
		} else {			
			sum = ((n-2)*((n-1)*n))/6;
			System.out.println(sum);
			System.out.println(3);
		}
	}
}
