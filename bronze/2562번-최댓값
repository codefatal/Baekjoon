import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int[] intArr = new int[9];
		int count = 0;
		int max = 0;
		for(int i=0; i<intArr.length; i++) {
			intArr[i] = sc.nextInt();
			if(max<intArr[i]) {
				max = intArr[i];
				count = i+1;
			}
		}
		System.out.println(max);
		System.out.println(count);
	}
}
